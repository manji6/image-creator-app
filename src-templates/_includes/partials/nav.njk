<nav class="mb-4 flex flex-wrap items-center gap-4 border-b border-slate-200 pb-4">
  {% for item in site.nav %}
  <a
    href="{{ item.url | url }}"
    class="text-sm font-semibold {% if activeNav == item.key %}text-sea hover:text-sea/80{% else %}text-slate-600 hover:text-sea{% endif %} transition"
  >
    {{ item.label }}
  </a>
  {% endfor %}
</nav>
